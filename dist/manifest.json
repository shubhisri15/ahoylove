{
  "manifest_version": 3,
  "name": "AhoyLove Dashboard",
  "version": "1.0",
  "description": "Display your partner's ship dashboard on every page",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["ahoylove.js", "assets/*"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ahoyLoveWidget.js"],
      "run_at": "document_idle"
    }
  ]
}